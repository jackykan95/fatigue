<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_energy_level"
        android:layout_marginTop="30dp"
        android:background="@color/textViewColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <NumberPicker
        android:id="@+id/energy_level_frequency_picker"
        android:theme="Theme_Holo_Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_mental_fatigue"
        android:background="@color/textViewColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <NumberPicker
        android:id="@+id/mental_fatigue_frequency_picker"
        android:theme="Theme_Holo_Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>