<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_daily_summary"
        android:layout_marginTop="30dp"
        android:background="@color/textViewColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_daily_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/daily_activities"
        android:background="@color/buttonColor"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <TextView
        android:id="@+id/txt_weekly_summary"
        android:background="@color/textViewColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_weekly_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weekly_activities"
        android:background="@color/buttonColor"
        style="@style/Widget.AppCompat.Button.Borderless" />


</LinearLayout>
